name = input()

print('Hola'+ ' ' +str(name)+' '+'¿dime en qué te puedo ayudar: horario, recursos, riesgos laborales?')

horario = 'El horario de oficina es de 08:00 a 15:00 del 15 de junio al 15 de septiembre. El resto del año trabajamos de 09:00 a 18:30'
recursos = 'Puedes encontrar más información de la empresa en nimerya.tech'
riesgos = 'Tenemos un manual completo de riesgos labores, deberías leerlo con detenimiento por tu segurdad, dime tu email y te lo envío a tu correo'
tutor_sector_RRHH = 'Juan Manuel Garcia'
tutor_sector_finanzas = 'María López Perez'
tutor_sector_it = 'Pedro Martinez Sanchez'
parada_de_metro = 'El metro más cercano es Cuzco, línea 1, de ahí tardarás 10 minutos andando a la oficina'
cheques_restaurante = 'Los cheques restaurante tienes que solicitarlos al departemento de nóminas, extensión 40 o mail nominas@nimerya.tech'
contacto_rrhh = 'El contacto de RRHH que tienes asignado es Virginia Ramirez. Extensión 1154 o mail vramirez@nimerya.tech'

cosas_se_hacer = [horario, riesgos, recursos,tutor_sector_RRHH,tutor_sector_finanzas,tutor_sector_it,parada_de_metro,cheques_restaurante,contacto_rrhh]

input1 = input()

